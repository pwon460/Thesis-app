<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="WhiteOnBlack">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="BlackOnWhite">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="YellowOnBlack">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="WhiteOnPurple">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/dark_purple</item>
    </style>
    
    <style name="VerySmallText">
        <item name="android:textSize">@dimen/text_size_very_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallText">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediumText">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LargeText">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyPreferenceTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:background">@drawable/selector</item>
    </style>
    
    <style name="IndexBtnText">
        <item name="android:textSize">@dimen/index_btn_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>