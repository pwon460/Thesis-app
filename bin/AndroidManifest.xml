<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="simo.transport"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="20" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="simo.transport.ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="simo.transport.ui.SettingsActivity"
            android:label="@string/title_activity_settings_"
            android:parentActivityName="simo.transport.ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="simo.transport.MainActivity" />
        </activity>
        <activity
            android:name="simo.transport.ui.SelectTripActivity"
            android:label="@string/title_activity_pick_trip"
            android:parentActivityName="simo.transport.ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="simo.transport.MainActivity" />
        </activity>
        <activity
            android:name="simo.transport.ui.TrainTripActivity"
            android:label="@string/title_activity_train_trip"
            android:parentActivityName="simo.transport.ui.SelectTripActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="simo.transport.SelectTripActivity" />
        </activity>
    </application>

</manifest>